        },
        "required": ["type", "description", "source"]
      }
    },
    "equipment_effects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "type": {"type": "string", "enum": ["bonus", "resistance", "immunity", "advantage", "disadvantage", "other"]},
          "target": {"type": "string"},
          "value": {"type": ["integer", "null"]},
          "description": {"type": "string"},
          "source": {"type": "string"}
        },
        "required": ["name", "type", "target", "description", "source"]
